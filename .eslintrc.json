{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "@typescript-eslint/eslint-plugin",
        "eslint-plugin-tsdoc"
    ],
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "tsconfigRootDir": "",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "tsdoc/syntax": "warn"
    }
}
